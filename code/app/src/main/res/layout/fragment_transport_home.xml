<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.yzb.card.king.ui.appwidget.VpSwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_color_white"
                android:orientation="vertical">
                <!--顶部轮播-->
                <com.yzb.card.king.ui.appwidget.SlideShow1ItemView
                    android:id="@+id/slideShowView1"
                    android:layout_width="match_parent"
                    android:layout_height="145dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.yzb.card.king.ui.appwidget.SlideShow8ItemView2
                        android:id="@+id/slideShowView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp" />

                    <LinearLayout
                        android:id="@+id/ll_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true">

                        <ImageView
                            android:id="@+id/iv_edit"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_margin="8dp"
                            android:background="@mipmap/icon_edite_grey"
                            android:scaleType="fitCenter" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/panel_dots2"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                </LinearLayout>

                <include
                    layout="@layout/divider_middle_height"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:background="#E8E8E8" />

                <FrameLayout
                    android:id="@+id/fl_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#f9f9f9"
                    android:paddingBottom="16dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="6dp">

                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </com.yzb.card.king.ui.appwidget.VpSwipeRefreshLayout>
</LinearLayout>
