<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical"
    android:background="@color/white_ffffff"
    android:orientation="horizontal">

    <com.yzb.card.king.ui.appwidget.XCRoundRectImageView
        android:id="@+id/red_bag_type_img"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/icon_nav_user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/red_bag_type_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="拜年红包"
                android:textColor="@color/black2" />


            <TextView
                android:id="@+id/tvTest"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="bottom"
                android:text="元"
                android:textColor="#d6c07d" />

            <TextView
                android:id="@+id/red_bag_moneynum_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/tvTest"
                android:gravity="bottom"
                android:text="3.00"
                android:textColor="#d6c07d" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/red_bag_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="12-26"
                android:textColor="@color/calendar_day_price_gray" />

            <TextView
                android:id="@+id/red_bag_status_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="已领完"
                android:textColor="@color/calendar_day_price_gray" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
