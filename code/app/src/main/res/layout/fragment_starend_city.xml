<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
       android:background="@color/color_f0f0f0"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bgWhite"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        >

        <LinearLayout
            android:id="@+id/ll_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1">

            <TextView
                android:id="@+id/hbh_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="#272727"
                android:text="上海"
                android:textSize="16sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_center_plane"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:layout_margin="10dp"
                android:padding="7dp"
                android:background="@drawable/hbdt_detail_type"
                android:src="@mipmap/icon_white_plane"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1">

            <TextView
                android:id="@+id/hbh_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="北京"
                android:textColor="#272727"
                android:textSize="16sp"
                />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/wordGreyLight"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bgWhite"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="出发时间"
            android:textColor="@color/bgBlack"
            android:singleLine="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />

    <LinearLayout
        android:id="@+id/ll_plane_date"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/date_plane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10月1号"
            android:textColorHint="#999999"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/date_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="今天"
            android:textColorHint="#999999"
            android:textSize="16sp"
            />
    </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <Button
            android:id="@+id/searchPlane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="@dimen/title_l_r"
            android:layout_marginRight="@dimen/title_l_r"
            android:layout_marginTop="34dp"
            android:background="@mipmap/bg_search_channel"
            android:focusable="true"
            android:text="搜 索"
            android:textColor="#fff"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>
    <!--android:background="@mipmap/icon_jipiao_bg"-->