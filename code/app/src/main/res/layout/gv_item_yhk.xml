<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_yhk"
            style="@style/iv1_style"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/tv2_style"
            android:layout_marginLeft="4dp"
            android:text=""
            android:textColor="@color/text_color_33"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:id="@+id/red_line"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_alignLeft="@+id/panel"
        android:layout_alignRight="@+id/panel"
        android:layout_below="@+id/panel"
        android:layout_marginTop="1dp"
        android:background="@color/color_status"
        android:visibility="invisible" />
</RelativeLayout>