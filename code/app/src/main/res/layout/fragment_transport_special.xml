<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_round_corner_white"
        android:paddingRight="15dp"
        android:paddingBottom="10dp">
        <LinearLayout
            android:id="@+id/ll_startTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="22dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:src="@mipmap/icon_blue_time"
                android:layout_gravity="bottom"/>
            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="#00B5D3"
                android:layout_marginLeft="3dp"
                android:hint="@string/shuttle_select_time"
                android:textColorHint="#C8D6D8"/>
            <ImageView
                android:layout_width="7dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_arrow_right_blue"
                android:layout_marginRight="24dp"
                android:layout_gravity="bottom"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:background="#cecece"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/icon_round_qi"
                    android:textColor="@color/white"
                    android:text="起"
                    android:textSize="7sp"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_line_arrive"/>
                <TextView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/icon_round_qi"
                    android:textColor="@color/white"
                    android:text="终"
                    android:textSize="7sp"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ll_start_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_start_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16sp"
                            android:textColor="#474747"
                            android:textColorHint="#C8D6D8"
                            android:hint="@string/shuttle_train_chufadihint"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="3dp"
                            android:background="#cecece"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="34dp"
                        android:src="@mipmap/icon_map_lacation_blue"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="bottom"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_end_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_end_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="#474747"
                        android:textColorHint="#C8D6D8"
                        android:hint="@string/shuttle_train_mudidihint"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="3dp"
                        android:background="#cecece"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
   <RelativeLayout
       android:id="@+id/rl_price"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:padding="10dp">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_centerInParent="true">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#B7B7B7"
               android:textSize="14sp"
               android:text="@string/jia_ge"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#D84043"
               android:textSize="20sp"
               android:text="@string/tv_selfdrive_money_unit"/>
           <TextView
               android:id="@+id/tv_price"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#D84043"
               android:textSize="20sp"
               android:text=""/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#B7B7B7"
               android:textSize="14sp"
               android:text="@string/special_home_qi"/>
       </LinearLayout>

       <ImageView
           android:layout_width="7dp"
           android:layout_height="13dp"
           android:background="@mipmap/icon_arrow_right_grey"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"/>

   </RelativeLayout>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_selector"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/huankuai"/>
</LinearLayout>