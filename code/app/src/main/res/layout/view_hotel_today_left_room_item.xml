<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <RelativeLayout
            android:id="@+id/rlRoomImage"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/ivRoomImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="@mipmap/bg_traveller_plan"
                />

            <TextView
                android:id="@+id/tvImageNum"
                android:layout_width="wrap_content"
                android:text="32张"
                android:textSize="9sp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white_ffffff"
                android:background="#7f919191"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRoomName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="豪华大床房 大床"
                    android:textColor="@color/color_333333"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tvHotelName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="上海联邦大酒店"
                    android:textColor="#848485"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/tvHotelCityDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="距离东方明珠2.9km"
                    android:textColor="#848485"
                    android:textSize="11sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSpecailMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="甩房种 剩余10份"
                        android:textColor="@color/color_436a8e"
                        android:textSize="11sp"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvPriceOne"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="¥500"
                            android:textColor="#848485"
                            android:textSize="11sp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:text="@string/tv_selfdrive_money_unit"
                            android:textColor="@color/color_d6c07f"
                            android:textSize="11sp"/>

                        <TextView
                            android:id="@+id/tvRoomPriceOneTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="280"
                            android:textColor="@color/color_d6c07f"
                            android:textSize="14sp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e6e6"/>
</LinearLayout>