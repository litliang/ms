<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
   >

    <LinearLayout
        android:id="@+id/llYouhuiquan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="14dp"
        android:paddingLeft="15dp"
        android:paddingRight="18dp"
        android:visibility="gone"
        android:background="@drawable/shape_bg_corner_gray_stroke"
        android:paddingTop="14dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="商家名称"
                android:textColor="@color/color_323232"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical">

                <include layout="@layout/ratingbar_coupon" />

                <TextView
                    android:id="@+id/tvScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="0.0分"
                    android:textColor="@color/color_464646"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvShopAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="浦东新区"
                android:textColor="@color/color_999999"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="73dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/icon_line_dashed" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFullCut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="满0减0"
                android:textColor="#3e6985"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_coupon_bg2"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="¥0"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvGet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/style_btn_red_circle"
                android:gravity="center"
                android:padding="5dp"
                android:text="立即领取"
                android:textColor="@color/color_a10000"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llGoldCoupone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_my_gold_coupon"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:paddingLeft="11dp"
        android:paddingRight="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="11dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvAmountOne"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="¥772"
                android:textColor="#970000"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvFullCutOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginTop="1dp"
                android:text="满0"
                android:textColor="#8e8e8e"
                android:textSize="13sp"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/line_xu_gold_coupon"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvShopNameOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="商家名称"
                android:textColor="@color/color_323232"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvGoldDateOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="yyyy-MM-dd至yyyy-MM-dd"
                android:textColor="#a9a9a9"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/tvShuoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="使用说明"
                android:textColor="#4c628e"
                android:textSize="12sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tvGetOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@drawable/style_btn_blue_deep_circle"
            android:gravity="center"
            android:text="立即领取"
            android:textColor="@color/white_ffffff"
            android:textSize="12sp"/>

    </LinearLayout>
</LinearLayout>