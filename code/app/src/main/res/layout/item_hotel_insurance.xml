<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/panelCancelInsurance"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_insurance"
            />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/hotel_order1_style"
            android:layout_marginLeft="8dp"
            android:text="title"/>

        <TextView
            android:id="@+id/tvPrice"
            style="@style/hotel_order1_style"
            android:layout_width="0dp"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:text="Â¥0"
            android:textColor="@color/color_bf9641"
            android:textSize="15sp"/>

        <com.yzb.card.king.ui.appwidget.SlideButton
            android:id="@+id/slideButton"
            android:layout_width="47dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_999999"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tvIntroduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/hotel_detail"
            android:textColor="@color/color_bf9641"
            android:textSize="13sp"/>

    </LinearLayout>

    <include layout="@layout/activity_hotel_order_divider"/>
</LinearLayout>