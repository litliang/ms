<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:fitsSystemWindows="true"
              android:background="@color/color_f0f0f0"
              android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/title_l_r"
        android:paddingRight="@dimen/title_l_r"
        android:paddingBottom="10dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:background="@color/white_ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <com.yzb.card.king.ui.appwidget.CircleImageView
                android:id="@+id/ivHeadImage"
                android:layout_width="38dp"
                android:layout_height="38dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="7dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/color_666666"
                    android:text="刘哲"/>

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/color_999999"
                    android:text="大床房"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvVoteNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="16sp"
                android:text="5分"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvVoteContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_marginTop="10dp"
            android:text="酒店很好，酒店很好，酒店很好，酒店很好酒酒店很好酒店很好酒店很好酒店很好酒店很好酒店很好酒酒店很好酒店很好酒店很好酒店很好酒店很好酒店很好酒店很好酒店很好酒店很好酒店很好酒店很好酒店很好"
            android:ellipsize="end"/>

        <LinearLayout
            android:id="@+id/llVoteImageInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivOneImage"
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:background="@mipmap/food_pic_msgl"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/ivTwoImage"
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/food_pic_msgl"
                    android:scaleType="fitXY"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvImageNumberStr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color_333333"
                android:textSize="12sp"
                android:text="共32张"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvVoteTime"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="2017-10-09"
                android:textColor="@color/color_999999"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvVoteRepalyNmber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_common_review_message"
                android:textColor="@color/color_333333"
                android:textSize="12sp"
                android:drawablePadding="5dp"
                android:text="12"/>

            <TextView
                android:id="@+id/tvVoteZanNumber"
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:drawableLeft="@mipmap/icon_common_review_zan"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="12sp"
                android:drawablePadding="5dp"
                android:text="12"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>