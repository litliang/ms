<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/panel_discount"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:visibility="gone"
              android:orientation="vertical">

    <View
        style="@style/payment_view_line_style"
        android:layout_marginTop="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <!--商家优惠-->
        <LinearLayout
            android:id="@+id/panel_shop_discount"
            style="@style/activity_payment_panel_style">

            <ImageView
                style="@style/activity_payment_panel_iv_style"
                android:src="@mipmap/icon_shoping_red"/>

            <TextView
                android:id="@+id/tvStoreDiscountPercent"
                style="@style/activity_payment_panel_tv_style"
                android:text="每满100减5元"/>

        </LinearLayout>

        <!--平台优惠-->
        <LinearLayout
            android:id="@+id/panel_platform_discount"
            style="@style/activity_payment_panel_style"
            android:paddingLeft="8dp">

            <ImageView
                style="@style/activity_payment_panel_iv_style"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tvPlatformDiscountPercent"
                style="@style/activity_payment_panel_tv_style"
                android:text="每满100减5元"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>