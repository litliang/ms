<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hotel_f5f5f5"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/title_header_left_title_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_view_height"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cdcdcd"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="14dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_corner_3"
            android:orientation="vertical"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMobileLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已绑定手机"
                    android:textColor="@color/wordBlack"
                    android:textSize="@dimen/sp_15"/>

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:enabled="false"
                    android:hint="请输入手机号码"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingLeft="30dp"
                    android:textColor="@color/wordBlack"
                    android:textColorHint="#919191"
                    android:textSize="@dimen/sp_15"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:background="@color/lineGrey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textColor="@color/wordBlack"
                    android:textSize="@dimen/sp_15"/>

                <EditText
                    android:id="@+id/etCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="bottom"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="4"
                    android:paddingLeft="30dp"
                    android:singleLine="true"
                    android:textColor="@color/wordBlack"
                    android:textColorHint="#919191"
                    android:textSize="@dimen/sp_15"/>

                <TextView
                    android:id="@+id/tvGetCode"
                    android:layout_width="55dp"
                    android:layout_height="26dp"
                    android:background="@drawable/selector_bg_pink_gray_corner_2"
                    android:gravity="center"
                    android:text="@string/setting_get_verify_code"
                    android:textColor="@color/white"
                    android:textSize="9sp"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btNext"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_normal_button"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size"
            android:text="下一步"/>
        <LinearLayout
            android:id="@+id/llLost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icong_blue_solid_question"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原手机丢失"
                android:textSize="13sp"
                android:textColor="#436a8e"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

