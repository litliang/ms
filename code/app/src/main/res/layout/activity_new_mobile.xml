<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hotel_f5f5f5"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.yzb.card.king.ui.my.activity.NewMobileActivity">

    <include
        layout="@layout/title_header_left_title_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_view_height"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cdcdcd"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_corner_3"
            android:orientation="vertical"
            android:paddingLeft="14dp"
            android:layout_marginTop="@dimen/title_l_r"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:paddingRight="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新手机号："
                    android:textColor="@color/user_center_black"
                    android:textSize="@dimen/sp_15"/>

                <EditText
                    android:id="@+id/etMobile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:inputType="phone"
                    android:paddingLeft="10dp"
                    android:maxLength="11"
                    android:textColor="@color/user_center_black"
                    android:textSize="14sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="@color/lineGrey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验  证  码："
                    android:textColor="@color/user_center_black"
                    android:textSize="@dimen/sp_15"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etCode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:textColor="@color/user_center_black"
                        android:textSize="@dimen/sp_15"/>

                    <TextView
                        android:id="@+id/tvGetCode"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/selector_bg_red_gray_corner_2"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btNext"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginBottom="72dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_normal_button"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>
</LinearLayout>
