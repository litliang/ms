<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_pic"
        style="@style/iv_base_style2"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/iv_pic"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/pic_bottom_bg"
        android:gravity="center_vertical|bottom"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/iv_map"
            style="@style/iv1_style"
            android:layout_width="@dimen/iv_map_width"
            android:layout_height="@dimen/iv_map_height"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_map_white"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/tv14_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_map"
            android:text="" />

        <TextView
            android:id="@+id/tv_distance"
            style="@style/tv14_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_name"
            android:text="" />

        <TextView
            android:id="@+id/tv_ct"
            style="@style/tv14_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="" />

    </RelativeLayout>

</RelativeLayout>