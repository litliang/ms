<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/title_l_r"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/discount_mindcard_homepage_shape_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/icon_round_number_red"
                    android:gravity="center"
                    android:text="原"
                    android:textColor="@color/white_ffffff"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/flightDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#353535"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    android:text="04-25  周一"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/start_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上海"
                        android:textColor="#353535"
                        android:textSize="15sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <View
                            android:id="@+id/center_line"
                            android:layout_width="25dp"
                            android:layout_height="1dp"
                            android:background="#353535"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/end_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京"
                        android:textColor="#353535"
                        android:textSize="15sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_flightNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="MU5122"
                    android:textColor="#353535"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/timeLength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="10h10min"
                    android:textColor="#353535"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="21dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退改签须知"
                    android:textColor="#476a83"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="3dp"
                    android:background="@mipmap/icon_arrow_right_ticket_detail_blue"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/icon_round_number_red"
                    android:gravity="center"
                    android:text="改"
                    android:textColor="@color/white_ffffff"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/flightDateOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#353535"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    android:text="04-25  周一"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/start_cityOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上海"
                        android:textColor="#353535"
                        android:textSize="15sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <View
                            android:layout_width="25dp"
                            android:layout_height="1dp"
                            android:background="#353535"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/end_cityOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京"
                        android:textColor="#353535"
                        android:textSize="15sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_flightNumberOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="MU5122"
                    android:textColor="#353535"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/timeLengthOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="10h10min"
                    android:textColor="#353535"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_discountOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="21dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退改签须知"
                    android:textColor="#476a83"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="3dp"
                    android:background="@mipmap/icon_arrow_right_ticket_detail_blue"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="@dimen/title_l_r"
        android:orientation="vertical"
        android:background="@drawable/discount_mindcard_homepage_shape_white">

        <TextView
            android:id="@+id/tvOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="乘机人"
            android:textColor="#353535"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tvChengjiRen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvOne"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tvOne"
            android:text="乘机人："
            android:textColor="#353535"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tvPiaohao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tvChengjiRen"
            android:layout_toRightOf="@+id/tvOne"
            android:text="票号："
            android:textColor="#353535"
            android:textSize="13sp"/>


    </RelativeLayout>


</LinearLayout>