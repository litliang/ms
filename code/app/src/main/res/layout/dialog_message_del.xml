<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/selector_corner_white_del">

        <TextView
            android:id="@+id/message_del_hint_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="24dp"
            android:paddingBottom="25dp"
            android:textColor="#4d4d4d"
            android:textSize="38px"
            android:text="@string/message_del_dialog"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/message_yesdel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_del_hint_txt"
            android:textSize="38px"
            android:background="#f00"
            android:textColor="@color/wordWhite"
            android:text="@string/order_confirm_order"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="0dp"
            />

        <Button
            android:id="@+id/message_nodel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="38px"
            android:background="#fff"
            android:text="@string/order_cancel_order"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_weight="1"
        android:id="@+id/textView13" />

</LinearLayout>