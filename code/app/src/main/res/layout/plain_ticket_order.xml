<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/panelCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/number"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_round_blue2"
            android:gravity="center"
            android:text="1"
            android:layout_marginRight="9dp"
            android:textColor="@color/white"
            android:textSize="10sp"
           />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_order_plane"
            android:layout_marginRight="9dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/start_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出发地"
            android:textColor="@color/color_333333"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="—"
            android:textColor="@color/color_333333"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/end_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目的地"
            android:textColor="@color/color_333333"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignLeft="@+id/panelCity"
        android:layout_below="@+id/panelCity"
        android:orientation="horizontal">

        <com.yzb.card.king.ui.appwidget.DashedLine
            android:id="@+id/dashLine"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginRight="17dp"
            android:layout_marginLeft="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <LinearLayout
                android:id="@+id/panelTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00-00"
                    android:textColor="@color/color_7c7c7c"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="00:00"
                    android:textColor="@color/color_7c7c7c"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="至"
                    android:textColor="@color/color_7c7c7c"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/color_7c7c7c"
                    android:textSize="11sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/panelBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/air_logo2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="3dp"
                    android:visibility="gone"
                    android:scaleType="fitCenter"/>

                <!--机型-->
                <TextView
                    android:id="@+id/air_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="国航CA0000"
                    android:textColor="@color/color_9a9a9a"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/cangwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="经济舱"
                    android:textColor="@color/color_9a9a9a"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
