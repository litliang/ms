<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_f0f0f0"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:paddingTop="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_pay_succeed"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="支付成功"
                android:textColor="@color/color_333333"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvOrderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="¥0"
            android:textColor="@color/color_333333"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvOrderMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text=""
            android:textColor="@color/color_666666"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOrderDetailItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f0f0f0"
        android:layout_weight="1"
        android:padding="@dimen/title_l_r"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llItemContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/title_l_r"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:background="@drawable/discount_mindcard_homepage_shape_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tvOne"
                    android:layout_width="match_parent"
                    android:textColor="@color/color_333333"
                    android:text="asdfasd"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvTwo"
                    android:layout_width="match_parent"
                    android:textColor="@color/color_333333"
                    android:text="asdfasd"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvThree"
                    android:layout_width="match_parent"
                    android:textColor="#5b5b5b"
                    android:layout_marginTop="5dp"
                    android:text="asdfasd"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llProductDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#44698e"
                    android:textSize="12sp"
                    android:text="查看详情"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tvLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_e3e3e3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOrderDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white_ffffff"
            android:gravity="center"
            android:paddingBottom="@dimen/title_l_r"
            android:paddingTop="@dimen/title_l_r"
            android:text="订单详情"
            android:textColor="@color/color_333333"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvBackHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_red_bottom_right"
            android:gravity="center"
            android:paddingBottom="@dimen/title_l_r"
            android:paddingTop="@dimen/title_l_r"
            android:text="返回首页"
            android:textColor="@color/white_ffffff"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>