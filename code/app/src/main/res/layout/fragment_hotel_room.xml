<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/color_f0f0f0"
              android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/llSetDatePP"
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white_ffffff"
            android:paddingLeft="@dimen/title_l_r"
            android:paddingRight="@dimen/title_l_r"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text="入住"
                        android:textColor="@color/color_b2b2b2"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tvStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6月1日"
                        android:layout_marginRight="4dp"
                        android:textColor="@color/color_666666"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvStartDateWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日"
                        android:textColor="@color/color_b2b2b2"
                        android:textSize="12sp"/>


                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="#cdcdcd"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text="离店"
                        android:textColor="@color/color_b2b2b2"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tvEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6月2日"
                        android:layout_marginRight="4dp"
                        android:textColor="@color/color_666666"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvEndDateWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="明天"
                        android:textColor="@color/color_b2b2b2"
                        android:textSize="12sp"/>


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/color_666666"
                    android:layout_marginRight="6dp"
                    android:text="共一晚"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_arrow_right_item_gray"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/title_l_r">


            <LinearLayout
                android:id="@+id/llHotelInfoScreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

             <include
                 android:id="@+id/viewScreen"
                 layout="@layout/view_activity_screen_info_item"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.yzb.card.king.ui.appwidget.asyncexpandablelist.async.AsyncExpandableListView
            android:id="@+id/asyncExpandableCollectionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




        <include
            android:id="@+id/viewRim"
            layout="@layout/activity_hotel_product_info_rim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>