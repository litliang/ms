<?xml version="1.0" encoding="utf-8"?>
<com.yzb.card.king.ui.appwidget.menulistview.ItemMenuView
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/llRight"
        android:layout_width="64dp"
        android:layout_height="95dp"
        android:gravity="center_vertical|right"
        >

        <ImageView
            android:id="@+id/tvDelete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_address_del"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_bg_corner_gray_stroke"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/color_4D4D4D"
                    android:textSize="15sp"
                    />

                <LinearLayout
                    android:id="@+id/panelSetDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:id="@+id/ivDot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_bg_blue_whole"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="设为默认"
                        android:textColor="@color/color_4D4D4D"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/divider_horizontal"/>

            <TextView
                android:id="@+id/tvMobile"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color_4D4D4D"
                android:textSize="15sp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="13dp"
            android:src="@mipmap/icon_edite"/>
    </LinearLayout>

</com.yzb.card.king.ui.appwidget.menulistview.ItemMenuView>

