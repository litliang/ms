<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_f0f0f0"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include
        android:id="@+id/rl_title"
        layout="@layout/title_header_left_title_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_view_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <View
        android:id="@+id/lineTitel"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_title"
        android:background="#cdcdcd"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:layout_marginLeft="@dimen/title_l_r"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="7dp"
                android:textSize="12sp"
                android:text="床型要求"/>

            <LinearLayout
                android:id="@+id/llBedType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_ffffff"
                android:orientation="vertical">


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:layout_marginLeft="@dimen/title_l_r"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="7dp"
                android:textSize="12sp"
                android:text="无烟房"/>

            <LinearLayout
                android:id="@+id/llNosmoking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_ffffff"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="@dimen/title_l_r"
                android:background="@drawable/shape_rounded_rectangle_white"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etRemark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:hint="填写更多信息(可不填）"
                    android:maxLength="225"
                    android:padding="7dp"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/title_size_14"/>

                <TextView
                    android:id="@+id/tvTxtNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingBottom="7dp"
                    android:paddingRight="7dp"
                    android:text="0/225"
                    android:textColor="#999999"
                    android:textSize="@dimen/title_size_14"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="18sp"
            android:text="提交"
            android:textColor="@color/white_ffffff"
            android:gravity="center"
            android:background="@color/titleRed"/>
    </LinearLayout>
</LinearLayout>