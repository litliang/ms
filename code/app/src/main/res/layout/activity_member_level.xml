<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/hotel_f5f5f5"
    tools:context=".ui.app.activity.MemberLevelActivity">


    <include
        layout="@layout/title_header_left_title_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_view_height"/>
    <View
        android:id="@+id/lineTitel"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cdcdcd"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/hotel_f5f5f5">
        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/user_center_black"
            android:textSize="14sp"
            android:layout_below="@id/ivPhoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp" />


        <RelativeLayout
            android:id="@+id/rlLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_below="@+id/tvName">
            <com.yzb.card.king.ui.appwidget.MemberSeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:maxHeight="1dp"
                android:minHeight="1dp"
                android:layout_centerInParent="true"
                android:thumb="@drawable/bg_circle_yellow"
                android:max="100"
                android:progressDrawable="@drawable/member_level_seek_bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_transparent"
                >
                <ImageView
                    android:id="@+id/tvLevel1"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:enabled="false"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/tvLevel2"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:enabled="false"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/tvLevel3"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:enabled="false"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/tvLevel4"
                    android:layout_width="41dp"
                    android:enabled="false"
                    android:layout_height="41dp"/>
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_below="@id/rlLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_transparent"
            >
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/user_center_black"
                android:enabled="false"
               />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/user_center_black"
                android:textSize="14sp"
                android:enabled="false"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/user_center_black"
                android:enabled="false"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/user_center_black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_transparent"
            android:visibility="gone"
           android:layout_alignParentBottom="true" >
            <TextView
                android:id="@+id/line1"
                android:layout_width="55dp"
                android:enabled="false"
                android:layout_height="match_parent"
                android:background="@drawable/selector_orange_transparent"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/line2"
                android:layout_width="55dp"
                android:enabled="false"
                android:layout_height="match_parent"
                android:background="@drawable/selector_orange_transparent"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/line3"
                android:layout_width="55dp"
                android:enabled="false"
                android:layout_height="match_parent"
                android:background="@drawable/selector_orange_transparent"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/line4"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:enabled="false"
                android:background="@drawable/selector_orange_transparent"/>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingBottom="20dp">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#09143a"
            android:textSize="14sp"
            android:text="钻石会员特权"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="#e6e6e6"/>
        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            android:scrollbars="none">

        </GridView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#3D4245"
            android:layout_marginBottom="3dp"
            android:text="会员标准"/>
        <TextView
            android:id="@+id/tvStandard"
            style="@style/member_level_text"
            android:lineSpacingExtra="7dp"/>

        <TextView
            style="@style/member_level_text"
            android:text="注：快递费、现金券、退货费，不包含在累计购物金额"/>
    </LinearLayout>

</LinearLayout>
