<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_ffffff"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <!--标题-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/title_l_r">

        <include layout="@layout/view_title_left"
            />
    </LinearLayout>


    <View
        android:id="@+id/lineTitel"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cdcdcd"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/page_margin_left_right"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:background="@color/bgWhite"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/login_select"
                android:gravity="center"
                android:paddingBottom="9dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="9dp"
                android:text="手机登录"
                android:textColor="@drawable/selector_text_white_transparent"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/zh_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/login_select"
                android:gravity="center"
                android:paddingBottom="9dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="9dp"
                android:text="密码登录"
                android:textColor="@drawable/selector_text_white_transparent"
                android:textSize="16sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMoble"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.9"
                        android:text="@string/txt_phone_number"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/title_size_16"/>

                    <EditText
                        android:id="@+id/etMoble"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/hint_phone_number"
                        android:inputType="number"
                        android:maxLength="11"
                        android:singleLine="true"
                        android:textColorHint="#c9c4c1"
                        android:textSize="@dimen/title_size_16"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/shape_rounded_rectangle_red_ea3336"
                        android:paddingBottom="7dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="7dp"
                        android:text="@string/txt_get_yanzhenma"
                        android:textColor="@color/titleRed"
                        android:textSize="11sp"
                        android:textStyle="normal"
                        android:visibility="invisible"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/train_cccccc"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="vertical"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvYanzhenMa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.9"
                        android:text="@string/txt_yanzhengma"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/title_size_16"/>

                    <EditText
                        android:id="@+id/etYanzhenMa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/hint_yanzhengma"
                        android:inputType="number"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColorHint="#c9c4c1"
                        android:textSize="@dimen/title_size_16"/>

                    <TextView
                        android:id="@+id/tvGetCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/shape_rounded_rectangle_red_ea3336"
                        android:paddingBottom="7dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="7dp"
                        android:text="@string/txt_get_yanzhenma"
                        android:textColor="@color/titleRed"
                        android:textSize="11sp"
                        android:textStyle="normal"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/train_cccccc"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llForgetPasswordTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="7dp">

                <LinearLayout
                    android:id="@+id/llForgetPassword"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/discount_header_bg_right"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/txt_wangji_mima"
                        android:textColor="#45648b"
                        android:textSize="@dimen/title_size_14"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/btRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="9dp"
                    android:text="注册"
                    android:textColor="#45648b"
                    android:textSize="@dimen/title_size_14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@mipmap/register_bg"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">

            <Button
                android:id="@+id/btLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_red_btn"
                android:text="@string/txt_login_str"
                android:textColor="@color/white_ffffff"
                android:textSize="@dimen/titlebar_text_size"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#dddddd"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:text="其它登录方式"
                        android:textColor="#929292"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#dddddd"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView android:id="@+id/qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/icon_login_qq"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#939393"
                        android:text="QQ"/>

                    <TextView
                        android:id="@+id/wx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/icon_login_weibo"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:textColor="#939393"
                        android:text="微信"/>

                    <TextView android:id="@+id/wb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/icon_login_sina"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#939393"
                        android:text="微博"/>

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</LinearLayout>