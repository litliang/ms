<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_jfb_round_corner5dp_white_solid"
        android:orientation="vertical"
        android:paddingLeft="9dp"
        android:paddingRight="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:text="卡    号"
                android:textColor="@color/credit_071535"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/etCardNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="必填"
                android:inputType="number"
                android:maxLength="23"
                android:paddingLeft="15dp"
                android:textColor="@color/credit_071535"
                android:textColorHint="@color/gray6"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:id="@+id/ivCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_camera_gray_wallet" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray4" />

        <LinearLayout
            android:id="@+id/llBank"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银  行"
                android:textColor="@color/credit_071535"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/ivBankLogo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/bank_logo_abc_back" />

            <TextView
                android:id="@+id/tvBankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="银行名称"
                android:textColor="@color/credit_071535"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:text="姓    名"
                android:textColor="@color/credit_071535"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="必填"
                android:maxLength="16"
                android:singleLine="true"
                android:textColor="@color/credit_071535"
                android:textColorHint="@color/gray6"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <View
            android:id="@+id/vCertLine"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray4" />

        <LinearLayout
            android:id="@+id/llCertInfo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llIdentification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCertType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:text="身份证"
                    android:textColor="@color/credit_071535"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:id="@+id/ivArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/icon_arrow_down" />
            </LinearLayout>

            <EditText
                android:id="@+id/etCertNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入证件号码"
                android:inputType="number"
                android:maxLength="19"
                android:paddingLeft="4dp"
                android:paddingRight="14dp"
                android:text=""
                android:textColor="@color/credit_071535"
                android:textColorHint="#919191"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray4" />

        <LinearLayout
            android:id="@+id/llStatementDate"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账单日"
                android:textColor="@color/credit_071535"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvStatementDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="必填"
                android:paddingLeft="15dp"
                android:textColor="@color/credit_071535"
                android:textColorHint="@color/gray6"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCanPayContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:text="有效期"
                    android:textColor="@color/credit_071535"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tvValidityDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="必填"
                    android:textColor="@color/credit_071535"
                    android:textColorHint="@color/gray6"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:text="安全码"
                    android:textColor="@color/credit_071535"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/etSafeCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="必填"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="@color/credit_071535"
                    android:textColorHint="@color/gray6"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvProtocol"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:textColor="@color/color_4c4c4c"/>
    <LinearLayout
        android:id="@+id/llNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icong_blue_solid_question" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="@string/card_add_notice"
            android:textColor="@color/black"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>