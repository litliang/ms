<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="97dp"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/tvHotelImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_traveller_plan"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvHotelName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="上海爱尚居酒店"
                            android:textColor="@color/color_333333"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tvBackMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shap_corner_rich_blue"
                            android:padding="3dp"
                            android:text="返"
                            android:textColor="@color/white_ffffff"
                            android:textSize="10sp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivLifeStages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:background="@mipmap/icon_bg_life_stages"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvHotelVote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        android:textColor="@color/color_d6c07f"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="分"
                        android:textColor="@color/color_d6c07f"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/tvHoteVoteMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="很好"
                        android:textColor="@color/color_d6c07f"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvHotelType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="经济型"
                        android:textColor="@color/color_999999"
                        android:textSize="14sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvHotelCityDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="距离市中心20km"
                    android:textColor="@color/color_999999"
                    android:textSize="11sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvBankPre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shap_corner_rich_blue"
                            android:padding="3dp"
                            android:text="银行优惠"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/white_ffffff"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tvQuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/shap_corner_blue"
                            android:padding="3dp"
                            android:text="券"
                            android:textColor="@color/color_476b98"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tvQiang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/shap_corner_blue"
                            android:padding="3dp"
                            android:text="抢"
                            android:textColor="@color/color_476b98"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tvKaquanyi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shap_corner_blue"
                            android:padding="3dp"
                            android:text="卡权益"
                            android:textColor="@color/color_476b98"
                            android:textSize="10sp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTodayLeftRoom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shap_corner_rich_blue"
                        android:padding="3dp"
                        android:text="今日甩房"
                        android:textColor="@color/white_ffffff"
                        android:textSize="10sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNewsMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="一小时前有人预订"
                        android:textColor="@color/color_999999"
                        android:textSize="11sp"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_selfdrive_money_unit"
                            android:textColor="@color/color_d6c07f"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tvHotelRoomPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="280"
                            android:textColor="@color/color_d6c07f"
                            android:textSize="17sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="起"
                            android:textColor="@color/color_999999"
                        android:textSize="10sp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e6e6"/>
</LinearLayout>