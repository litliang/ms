<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/llOne"
        android:layout_width="match_parent"
        android:layout_height="115.3dip"
        android:paddingBottom="5.3dip"
        android:layout_marginTop="5.3dip"
        android:orientation="horizontal"
        android:paddingLeft="5.3dip">

        <RelativeLayout android:id="@+id/left"
            android:layout_width="90dip"
            android:layout_height="110dip"
            android:layout_marginRight="13.3dip">

            <ImageView
                android:id="@+id/tvHotelImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_traveller_plan"
                />

        </RelativeLayout>
        <RelativeLayout android:id="@+id/right" android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="70dip"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTodayLeftRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_corner_rich_blue"
                android:padding="3dp"
                android:text="今日甩房"
                android:textColor="@color/white_ffffff"
                android:textSize="8sp"/>
        <LinearLayout android:layout_below="@+id/tvTodayLeftRoom" android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="12dip"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_selfdrive_money_unit"
                android:textColor="@color/color_d6c07f"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tvHotelRoomPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="280"
                android:textColor="@color/color_d6c07f"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起"
                android:textColor="@color/color_999999"
                android:textSize="9sp"/>
        </LinearLayout>
        </RelativeLayout>
        <LinearLayout android:layout_toLeftOf="@+id/right" android:layout_toRightOf="@+id/left"  android:layout_marginTop="6.6dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout

                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        >

                        <TextView

                            android:id="@+id/tvHotelName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="上海爱尚居酒店"
                            android:textColor="#5e5e5e"
                            android:textSize="15.5dip"/>


                        <TextView
                            android:id="@+id/tvBackMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shap_corner_rich_blue"
                            android:padding="3dp"
                            android:text="返"
                            android:textColor="@color/white_ffffff"
                            android:textSize="8sp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivLifeStages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@mipmap/icon_bg_life_stages"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvHotelVote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        android:textColor="@color/color_d6c07f"
                        android:textSize="13.5dip"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="分"
                        android:textColor="@color/color_d6c07f"
                        android:textSize="8dip"/>

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/tvHoteVoteMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="很好"
                        android:textColor="@color/color_d6c07f"
                        android:textSize="12dip"/>

                    <TextView
                        android:id="@+id/tvHotelType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dip"
                        android:text="经济型"
                        android:textColor="@color/color_999999"
                        android:textSize="9.5dip"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvHotelCityDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="距离市中心20km"
                    android:textColor="@color/color_999999"
                    android:textSize="11dip"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvBankPre"
                            android:layout_width="47dip"
                            android:layout_height="13.3dip"
                            android:background="@drawable/shap_corner_rich_blue"
                            android:text="银行优惠"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/white_ffffff"
                            android:gravity="center"
                            android:textSize="11dip"/>

                        <TextView
                            android:id="@+id/tvQuan"
                            android:layout_width="13.3dip"
                            android:layout_height="13.3dip"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/shap_corner_blue"
                            android:text="券"
                            android:textColor="@color/color_476b98"
                            android:textSize="8dip"/>


                        <TextView
                            android:id="@+id/tvQiang"
                            android:layout_width="13.3dip"
                            android:layout_height="13.3dip"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/shap_corner_blue"
                            android:text="抢"
                            android:textColor="@color/color_476b98"
                            android:textSize="8dip"/>


                        <TextView
                            android:id="@+id/tvKaquanyi"
                            android:text="卡权益"
                            android:layout_width="31dip"
                            android:layout_height="13.3dip"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/shap_corner_blue"
                            android:textColor="@color/color_476b98"
                            android:textSize="8dip"/>
                    </LinearLayout>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNewsMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一小时前有人预订"
                        android:textColor="@color/color_b3b3b3"
                        android:textSize="11dip"/>




                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e6e6"/>
</LinearLayout>