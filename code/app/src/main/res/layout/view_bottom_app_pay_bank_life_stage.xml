<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white_ffffff"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/title_l_r"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/color_333333"
        android:text="选择分期数"/>

    <TextView
        android:id="@+id/tvLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_e3e3e3"/>
    <LinearLayout
        android:id="@+id/llOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/ivBankLogo"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginRight="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBankName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/ivLifeStages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:visibility="gone"
                    android:background="@mipmap/icon_bg_life_stages"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvBankCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/color_999999"
                android:textSize="12sp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvYouhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#972b1f"
                android:textSize="12sp"
                android:visibility="gone"/>


        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e6e6"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12sp"
        android:layout_marginLeft="@dimen/title_l_r"
        android:text="分期方式"
        android:textColor="@color/color_999999"
        android:textSize="12sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/wvBankLvData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/title_l_r"
        android:paddingLeft="@dimen/title_l_r"
        android:divider="@color/color_e3e3e3"
        android:listSelector="@android:color/transparent">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:gravity="center"
        android:background="#980100"
        android:paddingBottom="10dp"
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:textColor="@color/white"/>


</LinearLayout>