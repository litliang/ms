<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_my_gold_coupon"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="11dp"
        android:paddingRight="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="11dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="抵"
                android:textColor="@color/text_color_33"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tvFullCutOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginTop="1dp"
                android:text="满0"
                android:textColor="#d5bf7c"
                android:textSize="16sp"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/line_xu_gold_coupon"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvShopNameOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="商家名称"
                android:textColor="@color/color_323232"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvGoldDateOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="yyyy-MM-dd至yyyy-MM-dd"
                android:textColor="#a9a9a9"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/tvShuoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="使用说明"
                android:textColor="#4c628e"
                android:textSize="12sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_coupon_bg3"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="¥0"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tvGetOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_marginTop="7dp"
                android:singleLine="true"
                android:background="@drawable/style_btn_yellow_circle"
                android:gravity="center"
                android:text="立即领取"
                android:textColor="@color/color_d6c07f"
                android:textSize="12sp"/>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>