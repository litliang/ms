<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llSelectedItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:paddingTop="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCarTypeAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="经济型"
                android:textColor="@color/selfdrive_gray_565656"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_selfdrive_assess"
                android:textColor="@color/selfdrive_gray_565656"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_selfdrive_money_unit"
                android:textColor="@color/red_d84043"
                android:textSize="9sp"
                android:layout_marginLeft="2dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCarMoneyAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="@color/red_d84043"
                android:layout_marginRight="30dp"
                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.0分"
                android:textColor="@color/blue_00B5D3"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_selfdrive_success_ratio"
                android:textColor="@color/black2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvSuccessRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="89%"
                android:textColor="@color/blue_00B5D3"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>