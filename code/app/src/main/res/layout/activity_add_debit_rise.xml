<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_f0f0f0"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include
        layout="@layout/title_header_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_view_height"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f0f0f0"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/title_l_r"
        android:paddingTop="5dp"
        android:text="@string/tv_setting_debit_info_save"
        android:textColor="@color/gray26"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_f0f0f0"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/llApplicant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="15dp">

                    <TextView
                        style="@style/Invoice_Style"
                        android:text="@string/tv_application_str"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvPeopleType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="7dp"
                            android:text="个人"
                            android:textSize="13sp"
                            android:textColor="@color/color_333333"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/icon_arrow_right_item_gray"/>
                    </LinearLayout>
                </LinearLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/setting_e6e6e6"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="15dp"
                    >

                    <TextView
                        android:id="@+id/tv_id_bank_name_label"
                        style="@style/Invoice_Style"
                        android:text="名称"
                        />

                    <EditText
                        android:id="@+id/et_debit_rise"
                        style="@style/setting_modify_binded_phone_et"
                        android:layout_weight="1"
                        android:layout_marginLeft="7dp"
                        android:ellipsize="end"
                        android:hint="@string/setting_add_debit_rise_et_hint1"
                        android:maxLength="20"
                        android:textColorHint="@color/discount_dcdcdc"
                        android:maxLines="1"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/setting_e6e6e6"/>

            <LinearLayout
                android:id="@+id/llInvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="15dp"
                    >


                    <TextView
                        style="@style/Invoice_Style"
                        android:text="税号"
                       />

                    <EditText
                        android:id="@+id/etOne"
                        style="@style/setting_modify_binded_phone_et"
                        android:layout_marginLeft="7dp"
                        android:ellipsize="end"
                        android:layout_weight="1"
                        android:hint="@string/setting_fill_content"
                        android:textColorHint="@color/discount_dcdcdc"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textSize="13sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/setting_e6e6e6"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="15dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:text="公司注册地址"
                        style="@style/Invoice_Style"/>

                    <EditText
                        android:id="@+id/etTwo"
                        style="@style/setting_modify_binded_phone_et"
                        android:layout_marginLeft="7dp"
                        android:ellipsize="end"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:hint="@string/setting_company_actual_address"
                        android:layout_weight="1"
                        android:textColorHint="@color/discount_dcdcdc"
                        android:textSize="13sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/setting_e6e6e6"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="15dp"
                    >


                    <TextView

                        android:text="公司注册电话"
                        style="@style/Invoice_Style"/>

                    <EditText
                        android:id="@+id/etThree"
                        style="@style/setting_modify_binded_phone_et"
                        android:layout_marginLeft="7dp"
                        android:inputType="phone"
                        android:maxLength="20"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:hint="@string/setting_company_actual_phone"
                        android:textColorHint="@color/discount_dcdcdc"
                        android:textSize="13sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/setting_e6e6e6"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="15dp"
                    >

                    <TextView
                        style="@style/Invoice_Style"
                        android:text="开户银行"
                        />

                    <EditText
                        android:id="@+id/etFour"
                        style="@style/setting_modify_binded_phone_et"
                        android:layout_marginLeft="7dp"
                        android:ellipsize="end"
                        android:maxLength="20"
                        android:layout_weight="1"
                        android:hint="@string/setting_company_bank_name"
                        android:maxLines="1"
                        android:textColorHint="@color/discount_dcdcdc"
                        android:textSize="13sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/setting_e6e6e6"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="15dp"
                    >


                    <TextView
                        style="@style/Invoice_Style"
                        android:text="开户账户"
                       />

                    <EditText
                        android:id="@+id/etFive"
                        style="@style/setting_modify_binded_phone_et"
                        android:layout_marginLeft="7dp"
                        android:ellipsize="end"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:hint="@string/setting_company_bank_content"
                        android:textColorHint="@color/discount_dcdcdc"
                        android:textSize="13sp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/panelSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="96dp"
        android:layout_marginTop="30dp"
        android:background="@color/color_f0f0f0"
        android:gravity="center"
        >


        <TextView
            android:id="@+id/ticket_editor_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_rounded_rectangle_red1"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/white_ffffff"
            android:textSize="14sp"/>

    </LinearLayout>
</LinearLayout>
