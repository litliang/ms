<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
       android:background="@color/color_f0f0f0"
              android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/bgWhite"
    >

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="航 班 号"
        android:textColor="@color/bgBlack"
        android:singleLine="true"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        />
    <EditText
        android:id="@+id/hbh_plane"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        android:background="@null"
        android:hint="如CZ3869"
        android:textColorHint="#b8b8b8"
        android:textSize="16sp"
        />
</LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/wordGreyLight"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bgWhite"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="出发日期"
            android:textColor="@color/bgBlack"
            android:singleLine="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            />


    <LinearLayout
        android:id="@+id/ll_plane_date"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/date_plane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10月1号"
            android:textColorHint="#b8b8b8"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/date_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="今天"
            android:textColorHint="#b8b8b8"
            android:textSize="16sp"
            />
    </LinearLayout>

        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <Button
            android:id="@+id/searchPlane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="@dimen/title_l_r"
            android:layout_marginRight="@dimen/title_l_r"
            android:layout_marginTop="34dp"
            android:background="@mipmap/bg_search_channel"
            android:focusable="true"
            android:text="搜索"
            android:textColor="#fff"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>
</LinearLayout>