<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/discount_mindcard_homepage_shape_white_bottom"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvIndexOrignal"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_rule_gray_border_white"
            android:gravity="center"
            android:text="1"
            android:textColor="#6d6d6d"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/panelOrignal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/panelArrowOrignal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">


                    <ImageView
                        android:id="@+id/ivCompanyLogo"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="1dp" />

                    <TextView
                        android:id="@+id/tvHangbanNumber"
                        style="@style/plane_order2_style"
                        android:layout_marginLeft="4dp"
                        android:textSize="14sp" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvStartCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上海"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="—"
                            android:textColor="@color/color_333333"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvEndCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="三亚"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:background="@mipmap/icon_ticket_guize" />

                        <TextView
                            android:id="@+id/tvOne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退改签规则"
                            android:textColor="#4a6a89"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/panelOrignalFlight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.yzb.card.king.ui.appwidget.WholeListView
                        android:id="@+id/flightListView"
                        android:layout_width="match_parent"
                        android:divider="@android:color/transparent"
                        android:layout_height="wrap_content" />

                    <!---经济舱位-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_price"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingLeft="2dp"
                        android:paddingTop="8dp">

                        <TextView
                            android:id="@+id/tvCangdeng"
                            style="@style/plane_order2_style"
                            android:text="经济舱"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/llShijiHangbanInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal"
                            android:visibility="invisible">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="实际航运"
                                android:textColor="#4a6a89"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvHangbanInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:text="航班信息"
                                android:textColor="#434343"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="40dp"
                        android:background="#dddddd" />
                    <!--乘机人-->
                    <LinearLayout
                        android:id="@+id/panelOrignalPassengers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingLeft="1dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            style="@style/plane_order2_style"
                            android:text="乘机人"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/panelOrignalContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center_vertical|left"
                            android:orientation="horizontal" />
                    </LinearLayout>

                    <!--票号-->
                    <LinearLayout
                        android:id="@+id/llOnePiaohao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvOnePiaohao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="票号"
                            android:textColor="@color/color_4D4D4D"
                            android:textSize="12sp" />


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>