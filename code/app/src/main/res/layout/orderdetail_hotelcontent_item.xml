<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/discount_mindcard_homepage_shape_white"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <RelativeLayout
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/order_detail_wordblack"
            android:textSize="16sp"
            android:text="标准间"/>


    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/type"
        android:layout_marginTop="5dp"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/arrive_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3月22日"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/room_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/arrive_date"
            android:text="1间"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/room_nights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/room_num"
            android:text="1间"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bedtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/room_nights"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ruzhuren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/arrive_date"
            android:layout_marginTop="5dp"
            android:text="入住人"
            android:textSize="14sp"
            android:textColor="@color/order_detail_wordblack"/>

        <TextView
            android:id="@+id/guest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_alignTop="@id/ruzhuren"
            android:layout_toRightOf="@id/ruzhuren"
            android:text="马云"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/zaocan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ruzhuren"
            android:layout_marginTop="5dp"
            android:text="含早餐"
            android:textSize="14sp"
            android:textColor="@color/order_detail_wordblack"/>

        <!--<TextView-->
            <!--android:id="@+id/youwuzaocan"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignTop="@+id/zaocan"-->
            <!--android:layout_toRightOf="@+id/zaocan"-->
            <!--android:layout_marginLeft="15dp"-->
            <!--android:text="有"-->
            <!--android:textColor="@color/wordBlack"-->
            <!--android:textSize="14sp" />-->

    </RelativeLayout>


</RelativeLayout>