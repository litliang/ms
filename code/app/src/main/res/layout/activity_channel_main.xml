<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <include
        android:id="@+id/viewTitle"
        android:layout_height="@dimen/title_view_height"
        android:layout_width="match_parent"
        android:visibility="gone"
        layout="@layout/view_title_search_choose_other"/>

    <include
        android:id="@+id/viewTitleTwo"
        android:visibility="gone"
        android:layout_height="@dimen/title_view_height"
        android:layout_width="match_parent"
        layout="@layout/view_public_head_title_lr"/>

    <include
        android:id="@+id/viewTitleThree"
        android:layout_height="@dimen/title_view_height"
        android:layout_width="match_parent"
        layout="@layout/view_title_home_three"/>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/listview_divider_color" />

    <include layout="@layout/bottom_tabs" />

</LinearLayout>
