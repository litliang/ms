<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include
        layout="@layout/title_header_left_title_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_view_height"/>

    <View
        android:id="@+id/lineTitel"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cdcdcd"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/setting_F4F4F4"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="14dp">

        <!--顶部部分；-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_corner_3"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="@dimen/title_l_r">

            <LinearLayout
                android:id="@+id/llFailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/icon_verify_failed"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="认证失败"
                    android:layout_marginTop="10dp"
                    android:textColor="#383838"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvReVerify"
                        android:layout_width="91dp"
                        android:layout_height="29dp"
                        android:background="@drawable/bg_gray_edge"
                        android:gravity="center"
                        android:text="重新认证"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp"
                        app:layout_columnWeight="1"
                        app:layout_gravity="right"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSucced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="恭喜您"
                    android:textColor="#949494"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/icon_verify_succed"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="认证通过"
                    android:layout_marginTop="10dp"
                    android:textColor="#980100"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvOpenHiLifeApp"
                        android:layout_width="91dp"
                        android:layout_height="29dp"
                        android:background="@drawable/bg_gray_edge"
                        android:gravity="center"
                        android:text="开启嗨生活"
                        android:textColor="@color/color_333333"
                        android:layout_marginRight="40dp"
                        android:textSize="14sp"
                        app:layout_columnWeight="1"
                        app:layout_gravity="right"/>

                    <TextView
                        android:id="@+id/tvAddBank"
                        android:layout_width="91dp"
                        android:layout_height="29dp"
                        android:background="@drawable/bg_gray_edge"
                        android:gravity="center"
                        android:text="添加银行卡"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp"
                        app:layout_columnWeight="1"
                        app:layout_gravity="right"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
