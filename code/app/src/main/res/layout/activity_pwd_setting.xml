<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/title_header_left_title_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_view_height"/>
    <View
        android:id="@+id/lineTitel"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cdcdcd"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/setting_F4F4F4"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <RelativeLayout
                android:id="@+id/rl_reset_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@color/white"
                android:paddingBottom="19dp"
                android:paddingLeft="19dp"
                android:paddingRight="25dp"
                android:paddingTop="19dp">

                <!--重置登录密码-->
                <TextView
                    style="@style/setting_reset_pwd_tv_left"
                    android:text="@string/setting_reset_login_pwd" />

                <ImageView
                    style="@style/setting_reset_pwd_iv_right"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/icon_arrow_right_grey" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_reset_pay_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:paddingBottom="19dp"
                android:paddingLeft="19dp"
                android:paddingRight="25dp"
                android:paddingTop="19dp">

                <!--重置支付密码-->
                <TextView
                    style="@style/setting_reset_pwd_tv_left"
                    android:text="@string/setting_reset_pay_pwd" />

                <ImageView
                    style="@style/setting_reset_pwd_iv_right"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/icon_arrow_right_grey" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
