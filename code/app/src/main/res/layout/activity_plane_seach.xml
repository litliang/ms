<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_f0f0f0"
    tools:context="com.yzb.card.king.ui.ticket.activity.PlaneSeachActivity">


    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_view_height"
        android:background="@color/white_ffffff"
        android:gravity="top">

        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/title_l_r"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_title_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_arrow_back_black"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="航班动态查询"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/titlebar_text_size"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cdcdcd"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/hbh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="按航班号"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textColor="#44698e"
                android:textSize="16sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1">
        <TextView
            android:id="@+id/qjd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:textColor="@color/black282828"
            android:text="按起降地"
            android:textSize="16sp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1">
        <TextView
            android:id="@+id/mycoll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="我的关注"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:textColor="@color/black282828"
            android:textSize="16sp"
            />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:id="@+id/lineOne"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_weight="1"
            android:background="#44698e"/>
        <View
            android:id="@+id/lineTwo"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:background="#44698e"/>
        <View
            android:id="@+id/lineThree"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:background="#44698e"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </FrameLayout>


</LinearLayout>
