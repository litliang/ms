<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"

    >

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/item_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#4d4d4d"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="12月5日"
            android:textColor="#999"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/line1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/line1"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="#999"/>


    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginRight="8dp"
        />

    <TextView
        android:id="@+id/item_money"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="3.00元"/>

    <TextView
        android:id="@+id/item_zuijia"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_money"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:visibility="invisible"
        android:text="手气最佳"
        android:textColor="#fcb111"/>

    <ImageView
        android:id="@+id/item_zuijia_img"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:visibility="invisible"
        android:layout_alignBottom="@id/item_zuijia"
        android:layout_toLeftOf="@id/item_zuijia"
        android:layout_toStartOf="@id/item_zuijia"
        android:src="@mipmap/icon_shouqizuijia"/>
</RelativeLayout>