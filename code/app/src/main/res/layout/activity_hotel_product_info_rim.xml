<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--房间设备-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/white_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/title_l_r">

        <LinearLayout
            android:id="@+id/llHotelFacility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/tvHotelFacility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="详情"
            android:textColor="#44698f"
            android:textSize="@dimen/text_size_12"/>
    </LinearLayout>

    <!--周边环境-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/white_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_hotel_nearby_server"/>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="周边"
                android:textColor="@color/color_333333"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#adadad"
                />

            <TextView
                android:id="@+id/transportion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/transportion"
                android:textColor="@color/selector_bg_blue_gray"
                android:textSize="14sp"/>


            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#adadad"/>

            <TextView
                android:id="@+id/food_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/food"
                android:textColor="@color/selector_bg_blue_gray"
                android:textSize="14sp"/>


            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#adadad"/>

            <TextView
                android:id="@+id/amusement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/amusement"
                android:textColor="@color/selector_bg_blue_gray"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#adadad"/>

            <TextView
                android:id="@+id/landscape"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/landscape"
                android:textColor="@color/selector_bg_blue_gray"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#adadad"/>


            <TextView
                android:id="@+id/gouwu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/gouwu"
                android:textColor="@color/selector_bg_blue_gray"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#adadad"/>

            <TextView
                android:id="@+id/jiud"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/jiudian"
                android:textColor="@color/selector_bg_blue_gray"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#adadad"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>