<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/hotel_f5f5f5">
    <include
        android:id="@+id/rl_title"
        layout="@layout/title_header_left_title_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_view_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cdcdcd"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center"
        android:background="@color/white">
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="名字"
            android:textSize="15sp"
            android:textColor="@color/color_333333"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="23dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/ivBankLogo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/bank_logo_abc_back"
                android:layout_marginRight="4dp"/>
            <TextView
                android:id="@+id/tvCardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfer_cardName_tailNum"
                android:textSize="12sp"
                android:textColor="@color/color_333333"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/divider_horizontal_gradiant"/>
        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:textColor="@color/color_333333"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tvFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray6"
            android:textSize="12sp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="8dp"
            android:text="免费服务"/>
        <include layout="@layout/divider_horizontal"/>
        <TextView
            android:id="@+id/tvTimeTable"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="两小时内到账"
            android:textSize="15sp"
            android:textColor="#2c889c"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textColor="@color/user_center_black"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/etComments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="选填"
            android:paddingLeft="15dp"
            android:textColorHint="@color/gray5"
            android:textSize="15sp"
            android:textColor="@color/color_333333"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="到账后嗨生活会通过消息中心通知到你"
        android:paddingLeft="16dp"
        android:textSize="14sp"
        android:textColor="@color/gray6"/>

    <Button
        android:id="@+id/btNext"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/selector_bg_red_gray_corner_2"
        android:text="确认转账"
        android:textColor="@color/white"
        android:textSize="15sp"/>
</LinearLayout>
    <!--android:text="@string/string_price"-->