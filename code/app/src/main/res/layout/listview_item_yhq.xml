<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_color_white"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="21dp"
                android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_coupon_bg"
            android:gravity="center_vertical|right"
            android:paddingRight="5dp"
            android:text=""
            android:textColor="@color/text_color_white"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_mm"
            style="@style/tv21_style"
            android:layout_alignLeft="@+id/tv"
            android:layout_below="@+id/tv"
            android:layout_marginTop="2dp"
            android:text=""
            android:textSize="12sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_syrq"
            style="@style/tv21_style"
            android:layout_alignLeft="@+id/tv"
            android:layout_below="@+id/tv"
            android:layout_marginTop="4dp"
            android:text=""
            android:textSize="12sp"
            android:visibility="visible"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_ljlq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_corner_red_gray_selector"
        android:text="立即领取"
        android:textColor="@color/text_color_selector1"
        android:textSize="@dimen/text_size_3"/>
</RelativeLayout>