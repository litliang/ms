<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="12dp"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingLeft="15dp"
              android:paddingRight="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="收货地址"
            android:textColor="@color/color_999999"
            android:textSize="15sp"
            />

        <ImageView
            android:id="@+id/ivAddAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_add_bank_info"
            />
    </RelativeLayout>

    <View
        android:id="@+id/lineAddress"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:background="@color/divider_color3"/>

    <RelativeLayout
        android:id="@+id/panelAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="22dp"
        android:visibility="gone"
        android:paddingTop="11dp">

        <TextView
            android:id="@+id/addressName"
            style="@style/plane_order4_style"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/addressMobile"
            style="@style/plane_order4_style"
            android:layout_alignBottom="@+id/addressName"
            android:layout_alignParentRight="true"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/icon_address_blue_phone"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/addressAddress"
            style="@style/plane_order4_style"
            android:layout_width="match_parent"
            android:layout_below="@+id/addressName"
            android:layout_marginTop="14dp"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="15sp"/>

    </RelativeLayout>
</LinearLayout>