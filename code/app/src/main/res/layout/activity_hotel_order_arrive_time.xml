<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/panelArriveShop"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/hotel_order1_style"
            android:text="到店时间"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="28dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_arrive0"
                    style="@style/hotel_order_arrive_time"
                    android:text="18:00之前(无担保)"
                    />

                <TextView
                    android:id="@+id/tv_arrive1"
                    style="@style/hotel_order_arrive_time"
                    android:layout_marginLeft="15dp"
                    android:text="23:59(担保)"
                    />

                <TextView
                    android:id="@+id/tv_arrive2"
                    style="@style/hotel_order_arrive_time"
                    android:layout_marginLeft="15dp"
                    android:text="06:00(担保)"
                    />
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

    <include layout="@layout/activity_hotel_order_divider"/>
</LinearLayout>