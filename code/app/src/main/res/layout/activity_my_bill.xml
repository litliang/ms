<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_bill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#f5f5f5f5"
    tools:context="com.yzb.card.king.ui.my.activity.MyBillActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_view_height"
        android:background="@color/titleRed"
        android:fitsSystemWindows="true"
        android:gravity="top">

        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/title_l_r"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:onClick="backAction">

            <ImageView
                android:id="@+id/img_title_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_back_white" />

        </LinearLayout>

        <TextView
            android:id="@+id/titleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="账户明细"
            android:textColor="#fff"
            android:textSize="@dimen/titlebar_text_size" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_bill_detail_center"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bill_username_img"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/icon_nav_user" />

                <TextView
                    android:id="@+id/bill_username_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="可爱小嗨   18395201539"
                    android:textColor="#303030"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="#fff"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/bgWhite"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bill_mytitle_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/wordGreyLight"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="礼品卡"
                        android:textColor="@color/wordBlack3"
                        android:layout_marginTop="4dp"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>
                <View
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#e6e6e6" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/bgWhite"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bill_mytitle_redbag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/wordGreyLight"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="红包"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/wordBlack3"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#e6e6e6" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/bgWhite"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bill_mytitle_carshmonry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/wordGreyLight"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="现金余额"
                        android:textColor="@color/wordBlack3"
                        android:layout_marginTop="4dp"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#e6e6e6" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/bgWhite"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bill_mytitle_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0张可用"
                        android:textColor="@color/wordGreyLight"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠券"
                        android:textColor="@color/wordBlack3"
                        android:layout_marginTop="4dp"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginRight="@dimen/dp_17"
                android:background="#f0f0f0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="#fff"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/bgWhite"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bill_mytitle_pingtai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/wordGreyLight"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="平台积分"
                        android:textColor="@color/wordBlack3"
                        android:layout_marginTop="4dp"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>
                <View
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#e6e6e6" />
                <LinearLayout
                    android:id="@+id/bill_search_store"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/bgWhite"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查询>"
                        android:textColor="@color/wordGreyLight"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商家积分"
                        android:textColor="@color/wordBlack3"
                        android:layout_marginTop="4dp"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>
                <View
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#e6e6e6" />
                <LinearLayout
                    android:id="@+id/bill_search_bank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/bgWhite"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查询>"
                        android:textColor="@color/wordGreyLight"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="银行积分"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/wordBlack3"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#e6e6e6" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/bgWhite"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/wordGreyLight"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/wordBlack3"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/bgWhite"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingLeft="10dp"
                        android:paddingRight="@dimen/title_l_r"
                        android:text="-----明细"
                        android:textColor="#656565"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/title_l_r"
                    android:layout_marginRight="@dimen/title_l_r"
                    android:background="#f2f2f2" />

                <LinearLayout
                    android:id="@+id/bill_crashmoney_llayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/nav_left_width"
                    android:layout_marginTop="@dimen/nav_left_width"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/title_l_r"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/icon_crash_bill" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableRight="@mipmap/icon_mingxi_arrow_right_gray"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="@dimen/title_l_r"
                        android:text="现金余额"
                        android:textColor="@color/wordBlack3" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/title_l_r"
                    android:layout_marginRight="@dimen/title_l_r"
                    android:background="#f2f2f2" />

                <LinearLayout
                    android:id="@+id/bill_card_llayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/nav_left_width"
                    android:layout_marginTop="@dimen/nav_left_width"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/title_l_r"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/icon_giftcard_bill" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableRight="@mipmap/icon_mingxi_arrow_right_gray"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="@dimen/title_l_r"
                        android:text="礼品卡"
                        android:textColor="@color/wordBlack3" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/title_l_r"
                    android:layout_marginRight="@dimen/title_l_r"
                    android:background="#f2f2f2" />

                <LinearLayout
                    android:id="@+id/bill_redbag_llayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/nav_left_width"
                    android:layout_marginTop="@dimen/nav_left_width"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/title_l_r"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/icon_redbag_bill" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableRight="@mipmap/icon_mingxi_arrow_right_gray"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="@dimen/title_l_r"
                        android:text="红包"
                        android:textColor="@color/wordBlack3" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/title_l_r"
                    android:layout_marginRight="@dimen/title_l_r"
                    android:background="#f2f2f2" />

                <LinearLayout
                    android:id="@+id/bill_jifeng_llayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/nav_left_width"
                    android:layout_marginTop="@dimen/nav_left_width"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/title_l_r"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/icon_pintai_jiffeng" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableRight="@mipmap/icon_mingxi_arrow_right_gray"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="@dimen/title_l_r"
                        android:text="平台积分"
                        android:textColor="@color/wordBlack3" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/title_l_r"
                    android:layout_marginRight="@dimen/title_l_r"
                    android:background="#f2f2f2" />

                <LinearLayout
                    android:id="@+id/bill_storejifeng_llayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/nav_left_width"
                    android:layout_marginTop="@dimen/nav_left_width"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/title_l_r"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/icon_store_jifeng" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableRight="@mipmap/icon_mingxi_arrow_right_gray"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="@dimen/title_l_r"
                        android:text="商家积分"
                        android:textColor="@color/wordBlack3" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/title_l_r"
                    android:layout_marginRight="@dimen/title_l_r"
                    android:background="#f2f2f2" />

                <LinearLayout
                    android:id="@+id/bill_bankjifeng_llayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/nav_left_width"
                    android:layout_marginTop="@dimen/nav_left_width"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/title_l_r"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/icon_bank_jifeng" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableRight="@mipmap/icon_mingxi_arrow_right_gray"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="@dimen/title_l_r"
                        android:text="银行积分"
                        android:textColor="@color/wordBlack3" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
