<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="@dimen/title_l_r"
    android:layout_marginRight="@dimen/title_l_r"
    android:background="@mipmap/icon_bg_ordermanager"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--第一行-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="礼品卡"
                    android:textColor="@color/color_4D4D4D"
                    android:textSize="15sp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/tvTitle"
                    android:background="@color/credit_CBCBCB"/>

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0000-00-00"
                    android:textColor="@color/color_999999"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tvCardType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="心意卡-友情卡"
                android:textColor="@color/color_999999"
                android:textSize="13sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvRecvPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0领/0总"
                    android:textColor="@color/color_999999"
                    android:textSize="11sp"
                    />

                <TextView
                    android:id="@+id/tvRestAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余金额¥0"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_bf9543"
                    android:textSize="11sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvDelete"
                    style="@style/ticket_order_item_op_type"
                    android:text="@string/order_delete"
                    />

                <TextView
                    android:id="@+id/tvReBuy"
                    style="@style/ticket_order_item_op_type"
                    android:layout_marginLeft="7dp"
                    android:text="@string/order_book_again"
                    />

                <TextView
                    android:id="@+id/tvCancel"
                    style="@style/ticket_order_item_op_type"
                    android:layout_marginLeft="7dp"
                    android:text="@string/order_cancel_order"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tvPay"
                    style="@style/ticket_order_item_op_type"
                    android:layout_marginLeft="7dp"
                    android:text="@string/string_pay"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tvAgainSend"
                    style="@style/ticket_order_item_op_type"
                    android:layout_marginLeft="7dp"
                    android:text="@string/zaicifasong"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2.7"
            android:gravity="center"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="#c1923d"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tvOrderAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="#c1923d"
                    android:textSize="21sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="1dp"
                android:text="状态"
                android:textColor="@color/color_4D4D4D"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>