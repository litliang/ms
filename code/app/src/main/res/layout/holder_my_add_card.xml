<?xml version="1.0" encoding="utf-8"?>
<com.yzb.card.king.ui.appwidget.menulistview.ItemMenuView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="119dp"
    android:background="@color/white_ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/llRight"
        android:layout_width="64dp"
        android:layout_height="119dp"
        android:gravity="center_vertical|right">

        <ImageView
            android:id="@+id/tvDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rule_entiy_white"
            android:padding="13dp"
            android:src="@mipmap/liaisons_address_del"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:background="@color/white_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/title_l_r">

        <ImageView
            android:id="@+id/ivBankLogo"
            android:background="@drawable/bg_circle_white"
            android:layout_width="117dp"
            android:layout_height="73dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/logo_nfhk"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国银行"
                android:textColor="@color/color_333333"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvCardType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="储蓄卡"
                android:textColor="@color/color_333333"
                android:textSize="14sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTailNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2345"
                    android:textColor="@color/color_333333"
                    android:layout_alignParentBottom="true"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</com.yzb.card.king.ui.appwidget.menulistview.ItemMenuView>