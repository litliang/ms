<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="积分宝"
            android:textColor="@color/jfb_5B5B5B"
            android:textSize="21sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llIntetalYouhui"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@mipmap/icon_jfb_top_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvZhuanJiFen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="赚积分"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="19dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tvKaWangHui"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="19dp"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/llTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvJiFenYouHui"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="积分优惠"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/jfb_EAEAEA"
            android:orientation="vertical">

            <com.yzb.card.king.ui.appwidget.SlideShow1ItemView
                android:id="@+id/slideShowView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/rl_jfdh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="9dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="9dp">

                <ImageView
                    android:id="@+id/iv_left0"
                    android:layout_width="23dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_jfb_jfdh"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@+id/iv_left0"
                    android:text="积分兑换"
                    android:textColor="@color/jfb_636363"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/arrow_right_grey"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <include layout="@layout/divider_d7d7d7" />

            <RelativeLayout
                android:id="@+id/rl_share_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="9dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="9dp">

                <ImageView
                    android:id="@+id/iv_left1"
                    android:layout_width="23dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_jfb_fxapp"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@+id/iv_left1"
                    android:text="分享app"
                    android:textColor="@color/jfb_636363"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/arrow_right_grey"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <include layout="@layout/divider_d7d7d7" />

            <RelativeLayout
                android:id="@+id/rl_call_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="9dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="9dp">

                <ImageView
                    android:id="@+id/iv_left2"
                    android:layout_width="23dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_jfb_lxwm"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@+id/iv_left2"
                    android:text="联系我们"
                    android:textColor="@color/jfb_636363"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/arrow_right_grey"
                    android:scaleType="fitXY" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
