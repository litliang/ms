<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_base_dialog"
        android:gravity="center_vertical"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/title_l_r"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_marginRight="@dimen/title_l_r"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvUnite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_selfdrive_money_unit"
                    android:textColor="@color/titleRed"
                    android:textStyle="bold"
                    android:layout_marginRight="2dp"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18"
                    android:textStyle="bold"
                    android:textColor="@color/titleRed"
                    android:textSize="15sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="满400"
                android:textColor="#999999"
                android:textSize="12sp"/>

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#e5e7ea"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvCouponData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="2017-06-20至2017-06-23"/>

            <TextView
                android:id="@+id/tvCouponDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:textSize="10sp"
                android:ellipsize="end"
                android:textColor="#999999"
                android:text="可用于【携程旅游】报价的房间可用于【携程旅游】报价的房间可"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tvFuctionGet"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_round_corner_red"
            android:textColor="@color/white_ffffff"
            android:textSize="12sp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:gravity="center"
            android:text="立即领取"/>

    </LinearLayout>

</LinearLayout>