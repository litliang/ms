<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/hotel_f5f5f5">
    <include layout="@layout/header"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/color_b3b3b3"
        android:gravity="center"
        android:text="2小时到账"
        android:textColor="@color/white"
        android:textSize="16sp"/>
    <com.yzb.card.king.ui.appwidget.WholeListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1px"
        android:divider="@color/gray4"/>
    <include layout="@layout/divider_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/time_table_insturction"
        android:textSize="12sp"
        android:textColor="@color/gray6"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/white"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/color_b3b3b3"
        android:gravity="center"
        android:text="实时到账"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="21dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/time_table_instruction_now"
        android:textSize="12sp"
        android:textColor="@color/gray6"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/white"
        android:gravity="center_vertical"/>
</LinearLayout>
