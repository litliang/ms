<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ship_gray_F4F4F4"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_view_height"
        android:background="@color/titleRed">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:onClick="backAction">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:src="@mipmap/icon_back_white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车费预估"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="21sp"/>
    </RelativeLayout>
    <!--标签-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <com.yzb.card.king.ui.appwidget.TouchableTabView
            android:id="@+id/llTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/bg_round_corner_white">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/cart_pic_01"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:text="经济型"
                    android:textColor="@drawable/selector_text_gray_red"
                    android:enabled="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:enabled="true"
                    android:background="@drawable/selector_bg_red_grey"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/cart_pic_02"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="11sp"
                    android:text="舒适型"
                    android:textColor="@drawable/selector_text_gray_red"
                    android:enabled="false"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:enabled="false"
                    android:background="@drawable/selector_bg_red_grey"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/cart_pic_03"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:layout_marginTop="10dp"
                    android:text="豪华型"
                    android:textColor="@drawable/selector_text_gray_red"
                    android:enabled="false"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:enabled="false"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_bg_red_grey"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/cart_pic_04"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:text="商务型"
                    android:layout_marginTop="10dp"
                    android:textColor="@drawable/selector_text_gray_red"
                    android:enabled="false"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:enabled="false"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_bg_red_grey"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/cart_pic_05"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:layout_marginTop="10dp"
                    android:text="特斯拉"
                    android:textColor="@drawable/selector_text_gray_red"
                    android:enabled="false"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:enabled="false"
                    android:background="@drawable/selector_bg_red_grey"/>
            </LinearLayout>
            </com.yzb.card.king.ui.appwidget.TouchableTabView>
        <com.yzb.card.king.ui.appwidget.NoScrollPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </com.yzb.card.king.ui.appwidget.NoScrollPager>
    </LinearLayout>

</LinearLayout>