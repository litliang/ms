<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/hotel_f5f5f5"
              android:orientation="vertical">
    <!--顶部轮播-->
    <com.yzb.card.king.ui.appwidget.SlideShow1ItemView
        android:id="@+id/slideShowView1"
        android:layout_width="match_parent"
        android:layout_height="164dp"/>

    <LinearLayout
        android:id="@+id/panel_dots2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_round_corner_white_3dp"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rl_dep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">


                <TextView
                    android:id="@+id/txtDep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="9dp"
                    android:text="出发地"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtDep"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_dep"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/txtDep"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        />

                    <LinearLayout
                        android:id="@+id/dingwei_img"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:src="@mipmap/icon_map_trave"
                            />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="11dp"
                android:background="@color/divider_color3"
                ></View>

            <RelativeLayout
                android:id="@+id/rl_arr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtArr"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_arr"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/txtDep"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:hint="输入目的地"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/discount_grey"
                        android:textSize="16sp"
                        />

                    <LinearLayout
                        android:id="@+id/llDelAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:paddingRight="1dp">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@mipmap/icon_travel_del_buttom"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtArr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="9dp"
                    android:text="目的地"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <Button
                android:id="@+id/searchTravel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/bg_search_channel"
                android:focusable="true"
                android:text="搜 索"
                android:textColor="#fff"
                android:textSize="20sp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_hig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_ffffff"
            android:paddingBottom="9dp"
            android:paddingLeft="10dp"
            android:paddingTop="9dp"
            >

            <LinearLayout
                android:id="@+id/txtHig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/imgHig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_super_search_travel"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/imgHig"
                    android:layout_weight="1"
                    android:text="高级搜索"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txtHig"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:hint="出发时间 预算 天数"
                    android:textColor="@color/red_d00011"
                    android:textColorHint="@color/red_d00011"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="10dp"
                    android:src="@mipmap/arrow_small_right"
                    />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#d8d8d8"/>

    <LinearLayout
        android:id="@+id/panel_dots23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ffffff"
        android:gravity="center"
        android:orientation="vertical">
        <!--特卖惠-->
        <com.yzb.card.king.ui.appwidget.CycleTextView
            android:id="@+id/cycleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_round_corner_white"
            android:padding="5dp"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@color/bgWhite"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:src="@mipmap/bg_left_circle"/>


            <TextView
                style="@style/tv2_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/iv"
                android:text="线路推荐"
                android:textColor="@color/color_333333"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_weight="3"
                android:rotation="180"
                android:src="@mipmap/bg_left_circle"/>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>