<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/travle_bg_f5f5f5"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llNoCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <include
            layout="@layout/view_no_data"/>

        <TextView
            android:id="@+id/tvBandCard"
            android:layout_width="173dp"
            android:layout_height="28dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_red_corner_2"
            android:gravity="center"
            android:text="@string/travel_bind_card"
            android:textColor="@color/white_ffffff"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvManageCard"
            android:layout_width="173dp"
            android:layout_height="28dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_red_edge_1_corner_2"
            android:gravity="center"
            android:text= "@string/travel_transact_card"
            android:textColor="@color/titleRed"
            android:textSize="15sp"/>


        <LinearLayout
            android:id="@+id/llOtherMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="173dp"
                android:layout_height="28dp"
                android:background="@drawable/shape_rectangle_blue_more"
                android:gravity="center"
                android:text="@string/ticket_more_bank"
                android:textColor="@color/color_5d7e98"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>