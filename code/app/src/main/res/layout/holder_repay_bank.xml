<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ivBankLogo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginRight="13dp"
        android:padding="13dp"
        android:background="@drawable/circle_edge_bank_icon"/>

    <TextView
        android:id="@+id/tvBankName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/ivBankLogo"
        android:textColor="#0e173b"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvBankName"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/ivBankLogo"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray6"
            android:textSize="13sp"/>

        <View
            android:layout_width="1px"
            android:layout_height="12dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="#dbdbdb"/>

        <TextView
            android:id="@+id/tvTailNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray6"
            android:textSize="13sp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/arrow_right_big"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>