<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/title_l_r"
              android:paddingRight="@dimen/title_l_r">

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_sx"
            android:textColor="#071932"
            android:drawableLeft="@mipmap/ionc_arrow_right_gray"
            android:drawablePadding="5dp"
            android:textSize="14sp"/>
    </LinearLayout>


    <com.yzb.card.king.ui.appwidget.NoRollGridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:horizontalSpacing="40dp"
        android:numColumns="3"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:scrollbars="none"
        android:verticalSpacing="15dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tvExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:drawablePadding="2dp"
            android:drawableRight="@mipmap/icon_arrow_right_hotel_s"
            android:text="@string/label_expand"
            android:textColor="@color/color_4D4D4D"
            android:textSize="14sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvShrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:drawablePadding="2dp"
            android:drawableRight="@mipmap/icon_arrow_left_hotel_s"
            android:text="@string/label_shrink"
            android:textColor="@color/color_4D4D4D"
            android:textSize="14sp"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>