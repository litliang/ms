<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_bg_corner_gray_10"
        android:paddingBottom="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                >

                <ImageView
                    android:id="@+id/tmhImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/thmContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:lines="2"
                android:maxLines="2"
                android:minLines="2"
                android:singleLine="false"
                android:text="澳门3日自由行(5站)喜来登金沙城中心【溢彩流光】喜来登金沙城中心喜来登金沙城中心喜来登金沙城中心喜来登金沙城中心"
                android:textColor="@color/color_333333"
                android:textSize="13sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thmContent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="#bd9641"
                        android:textSize="13sp"/>


                    <TextView
                        android:id="@+id/tmhPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/textView24"
                        android:text="1699"
                        android:textColor="#bd9641"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/price_qi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tmhPrice"
                        android:text="起"
                        android:layout_alignBottom="@id/tmhPrice"
                        android:textColor="@color/color_999999"
                        android:textSize="10sp"
                        />

                    <TextView
                        android:id="@+id/tvYuanjia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/price_qi"
                        android:text="2880元"
                        android:layout_marginLeft="3dp"
                        android:layout_alignBottom="@id/price_qi"
                        android:textColor="@color/color_999999"
                        android:textSize="10sp"
                        />

                    <TextView
                        android:id="@+id/thmxw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@id/price_qi"
                        android:text="仅剩10席"
                        android:textColor="@color/color_999999"
                        android:textSize="9sp"
                        />
                </RelativeLayout>



            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>