<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <TextView
        android:id="@+id/filmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:textColor="@color/black8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/filmDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:text=""
            android:textColor="@color/gray13"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/filmTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:text=""
            android:textColor="@color/gray13"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/filmLanguages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text=""
            android:textColor="@color/gray13"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/filmEffect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text=""
            android:textColor="@color/gray13"
            android:textSize="11dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="9dp"
        android:background="@color/gray25" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="15dp"
            android:layout_marginLeft="49dp"
            android:background="@mipmap/icon_seat_can" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="可选"
            android:textColor="@color/gray13"
            android:textSize="11dp" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="15dp"
            android:layout_marginLeft="19dp"
            android:background="@mipmap/icon_seat_sale" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="已售"
            android:textColor="@color/gray13"
            android:textSize="11dp" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="15dp"
            android:layout_marginLeft="22dp"
            android:background="@mipmap/icon_seat_youcheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="已选"
            android:textColor="@color/gray13"
            android:textSize="11dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginLeft="21dp"
            android:background="@mipmap/icon_seat_good" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="最佳观影区"
            android:textColor="@color/gray13"
            android:textSize="11dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/gray9">

        <TextView
            android:id="@+id/screen"
            android:layout_width="257dp"
            android:layout_height="20dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="1dp"
            android:background="@mipmap/icon_seat_screen"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black11"
            android:textSize="11dp" />

        <com.yzb.card.king.ui.discount.seatsale.view.SSView
            android:id="@+id/mSSView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/screen"
            android:layout_marginTop="14dp" />

        <com.yzb.card.king.ui.discount.seatsale.view.SSThumView
            android:id="@+id/ss_ssthumview"
            android:layout_width="@dimen/ss_seat_thum_size_w"
            android:layout_height="@dimen/ss_seat_thum_size_h"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray25" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="7dp"
                android:text="购票成功后将发送取票码到"
                android:textColor="@color/gray13"
                android:textSize="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/mobileText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text=""
                    android:textColor="@color/black7"
                    android:textSize="15dp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/editView"
                    android:layout_width="13dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginStart="19dp"
                    android:background="@mipmap/icon_seat_edite" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="票价"
                    android:textColor="@color/ticket_red"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="@string/rmb"
                    android:textColor="@color/ticket_red"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/filmPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17dp"
                    android:text=""
                    android:textColor="@color/ticket_red"
                    android:textSize="21dp" />
            </LinearLayout>

            <Button
                android:id="@+id/payBtn"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/style_btn_red_deep2"
                android:text="特惠付款"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
