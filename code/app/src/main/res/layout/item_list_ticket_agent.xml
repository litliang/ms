<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white_ffffff"
              android:orientation="vertical"
    >


    <RelativeLayout
        android:id="@+id/rlOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/title_l_r"
        android:paddingTop="@dimen/title_l_r">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/title_l_r"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_flight_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/tvCompanyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="航空公司"
                    android:layout_marginRight="6dp"
                    android:textColor="@color/color_333333"/>

                <ImageView
                    android:id="@+id/ivLifeStages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_bg_life_stages"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="@dimen/title_l_r"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经济舱9.9折 免费提前改期"
                    android:textColor="@color/color_4D4D4D"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="6dp"
                    android:background="@mipmap/arrow_right_grey"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_book"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_corner_rich_top_yellow"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="预订"
                android:textColor="@color/white_ffffff"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_rest_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_corner_hollow_bottom_yellow"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="@string/ticket_rest_ticket"
                android:textColor="@color/color_d6c07f"
                android:textSize="7sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/ll_book"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥0"
                android:textColor="@color/color_d6c07f"
                android:textSize="19sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvChildrenPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥0"
                android:textColor="@color/color_999999"
                android:textSize="12sp"
                />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_package_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            android:id="@+id/llOne"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e6e6e6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:paddingLeft="@dimen/title_l_r"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvBankFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_corner_lightblue"
                android:padding="4dp"
                android:layout_marginRight="8dp"
                android:text="银行优惠"
                android:textColor="@color/color_476b98"
                android:textSize="8sp"/>


            <TextView
                android:id="@+id/tvQuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/shap_corner_lightblue"
                android:padding="4dp"
                android:text="券"
                android:textColor="@color/color_476b98"
                android:textSize="8sp"/>

            <TextView
                android:id="@+id/tvJian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@drawable/shap_corner_lightblue"
                android:padding="4dp"
                android:text="减"
                android:textColor="@color/color_476b98"
                android:textSize="8sp"/>


        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e6e6"/>
</LinearLayout>