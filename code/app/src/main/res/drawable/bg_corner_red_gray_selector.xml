<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="7dp"/>
            <stroke android:width="1dp" android:color="@color/text_color_1"/>
            <solid android:color="@color/text_color_white"/>
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="7dp"/>
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp"/>
            <stroke android:width="1dp" android:color="@color/color_status"/>
            <solid android:color="@color/text_color_white"/>
        </shape>
    </item>


</selector>