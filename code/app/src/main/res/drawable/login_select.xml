<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true"
        >
        <shape>
            <corners android:radius="2dp"/>
            <solid android:color="@color/titleRed"/>
            <stroke
                android:width="1dp"
                android:color="@color/titleRed"
                android:dashGap="2dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="2dp"/>
            <solid android:color="@color/bgWhite"/>
            <stroke
                android:width="1dp"
                android:color="@color/color_a3a3a3"
                android:dashGap="2dp"/>
        </shape>

    </item>
</selector>