<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/view" />

    <LinearLayout
        android:id="@+id/payAllLinear"
        android:layout_width="match_parent"
        android:layout_height="366dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- 标题 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/grey4"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/pwdCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="left|center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:adjustViewBounds="true"
                    android:maxHeight="15dp"
                    android:maxWidth="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/pay_icon_toback" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="手机验证"
                    android:textColor="@color/black8"
                    android:textSize="16dp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="right|center">


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="请输入"
                android:textColor="@color/grey19"
                android:textSize="14dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black9"
                android:textSize="14dp"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="收到的短信"
                android:textColor="@color/grey19"
                android:textSize="14dp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/style_verify_code_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="验证码"
                android:textColor="@color/black9"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"
                android:visibility="visible"
                android:id="@+id/textView" />

            <EditText
                android:id="@+id/verifyCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="输入验证码"
                android:textColorHint="@color/grey6"
                android:inputType="number"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="@color/grey19"
                android:background="@null"
                android:textSize="18dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/clearVerifyCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:maxHeight="15dp"
                android:maxWidth="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/pay_icon_cancel" />

            <Button
                android:id="@+id/getVerifyCode"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/style_btn_red_deep"
                android:text="点击获取"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/payBtn"
                android:layout_width="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_height="45dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/next_btn_shape"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>