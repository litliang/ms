<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/view" />

    <LinearLayout
        android:id="@+id/payAllLinear"
        android:layout_width="match_parent"
        android:layout_height="366dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- 标题 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/grey4"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/pwdCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="left|center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:adjustViewBounds="true"
                    android:maxHeight="15dp"
                    android:maxWidth="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/pay_icon_toback" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="绑定成功"
                    android:textColor="@color/black8"
                    android:textSize="16dp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nextLinear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="right|center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="8dp"
                    android:gravity="center"
                    android:text="继续支付" 
                    android:textColor="@color/black4"
                    android:textSize="13dp"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="110dp"
            android:gravity="center"
            android:background="@drawable/pay_success">

            <ImageView
                android:id="@+id/clearVerifyCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:maxHeight="35dp"
                android:maxWidth="35dp"
                android:scaleType="centerInside"
                android:src="@drawable/pay_icon_ischeck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="恭喜您绑卡成功"
                android:textColor="@color/black9"
                android:layout_marginLeft="15dp"
                android:textSize="21dp"
                android:visibility="visible"
                android:id="@+id/textView" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>