<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent6Pc"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/payAllLinear"
        android:layout_width="match_parent"
        android:layout_height="366dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- 标题 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/grey4"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/pwdCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="left|center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:adjustViewBounds="true"
                    android:maxHeight="15dp"
                    android:maxWidth="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/pay_icon_toback" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="选择付款方式"
                    android:textColor="@color/black8"
                    android:textSize="16dp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="right|center">

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/lineGrey" />

        <LinearLayout
            android:id="@+id/payPwdLinear"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/payMethodList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:overScrollMode="never"
                android:scrollbars="none" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/lineGrey" />

        <!-- 付款方式 -->
        <LinearLayout
            android:id="@+id/addCard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="35dp"
                android:src="@drawable/selectpayfor_icon_newcard" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center|left"
                android:text="使用新卡付款"
                android:textColor="@color/black2"
                android:textSize="14dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="24dp"
                android:src="@drawable/icon_add" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>